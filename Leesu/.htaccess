#-----------------
# Activar Rewrite Engine
#-----------------

RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-f

RewriteCond %{REQUEST_FILENAME} !-d

#-----------------
# Eliminar index.php
#-----------------

RewriteCond $1 !^(index\.php|robots\.txt|sitemap\.xml|assets)
RewriteRule ^(.*)$ index.php/$1 [L]